{
  "id": "TaxonomicClassification",
  "script": "App-TaxonomicClassification",
  "label": "classify reads",
  "description": "Compute taxonomic classification for read data",
  "default_memory": "100G",
  "parameters": [
  {
    "id": "host_genome",
    "desc": "host genome",
    "required": 1,
    "default": "Homo sapiens",
    "label": "Host Genome",
    "type": "enum",
    "enum": [
        "homo_sapiens",
        "mus_musculus",
        "rattus_norvegicus",
        "caenorhabditis_elegans",
        "drosophila_melanogaster_strain",
        "danio_rerio_strain_tuebingen",
        "gallus_gallus",
        "macaca_mulatta",
        "mustela_putorius_furo",
        "sus_scrofa"
    ]
  },
  {
    "id": "analysis_type",
    "desc": "Workflow type (pathogen / microbiome)",
    "required": 1,
    "default": "microbiome",
    "label": "Analysis Type",
    "type": "enum",
    "enum": [
    "pathogen",
    "microbiome"
    ]
  },
  {
    "id": "input_type",
    "desc": "Input type (reads / contigs)",
    "required": 1,
    "default": "reads",
    "label": "Input Type",
    "type": "enum",
    "enum":
      "reads",
  },
  {
    "id": "paired_end_libs",
    "type": "group",
    "allow_multiple": true,
    "required": 0,
    "default": null,
    "group": [
      {
      "id": "read1",
      "required": 1,
      "label": "Read file 1",
      "desc": "FASTQ or FASTA file of reads",
      "wstype": "ReadFile",
      "type": "wstype"
      },
      {
      "id": "read2",
      "required": 0,
      "label": "Read file 2",
      "desc": "FASTQ or FASTA file of reads",
      "wstype": "ReadFile",
      "type": "wstype"
      },
    ]
  },
  {
  "id": "single_end_libs",
  "type": "group",
  "allow_multiple": true,
  "required": 0,
  "default": null,
  "group": [
      {
      "id": "read",
      "required": 1,
      "label": "Read file",
      "desc": "FASTQ, FASTA or H5 file of reads",
      "wstype": "ReadFile",
      "type": "wstype"
      },
    ]
  },
  {
    "id": "srr_ids",
    "required": 0,
    "allow_multiple": true,
    "default": null,
    "label": "SRR ID",
    "desc": "Sequence Read Archive (SRA) Run ID",
    "type": "string"
  },
  {
    "id": "algorithm",
    "type": "enum",
    "label": "Algorithm",
    "default": "Kraken2",
    "enum": [
      "Kraken2"
    ],
    "desc": "Classification algorithm",
    "required": 1
  },
  {
    "id": "database",
    "type": "enum",
    "label": "Database",
    "default": "bvbrc",
    "enum": [
  "bvbrc",
  "standard",
    ],
    "desc": "Target database",
    "required": 1
  },
  {
    "id": "output_path",
    "label": "Output Folder",
    "required": 1,
    "default": null,
    "desc": "Path to which the output will be written. Defaults to the directory containing the input data. ",
    "type": "folder"
  },
  {
    "id": "output_file",
    "label": "File Basename",
    "required": 1,
    "default": null,
    "desc": "Basename for the generated output files. Defaults to the basename of the input data.",
    "type": "wsid"
  }
  ]
}